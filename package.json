{
  "name": "youspec",
  "displayName": "YouSpec",
  "description": "Your coding DNA, portable across any AI. Document your coding style once and every AI follows it.",
  "version": "0.0.1",
  "publisher": "gundurraga",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gundurraga/youspec"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "coding-style",
    "preferences",
    "ai",
    "claude",
    "copilot",
    "standards",
    "conventions"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "youspec",
          "title": "YouSpec",
          "icon": "$(person)"
        }
      ]
    },
    "views": {
      "youspec": [
        {
          "id": "youspecSpecs",
          "name": "Specs",
          "canMoveViews": true
        }
      ]
    },
    "commands": [
      {
        "command": "youspec.addSpec",
        "title": "Add Spec",
        "icon": "$(add)"
      },
      {
        "command": "youspec.addFolder",
        "title": "Add Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "youspec.copySpec",
        "title": "Copy Spec",
        "icon": "$(copy)"
      },
      {
        "command": "youspec.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "youspec.renameItem",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "youspec.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "youspec.addSpec",
          "when": "view == youspecSpecs",
          "group": "navigation@1"
        },
        {
          "command": "youspec.addFolder",
          "when": "view == youspecSpecs",
          "group": "navigation@2"
        },
        {
          "command": "youspec.refresh",
          "when": "view == youspecSpecs",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "youspec.addSpec",
          "when": "view == youspecSpecs && viewItem == folder"
        },
        {
          "command": "youspec.addFolder",
          "when": "view == youspecSpecs && viewItem == folder"
        },
        {
          "command": "youspec.copySpec",
          "when": "view == youspecSpecs && viewItem == spec",
          "group": "inline"
        },
        {
          "command": "youspec.renameItem",
          "when": "view == youspecSpecs"
        },
        {
          "command": "youspec.deleteItem",
          "when": "view == youspecSpecs"
        }
      ]
    }
  }
}
