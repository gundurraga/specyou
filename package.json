{
  "name": "specyou",
  "displayName": "SpecYou",
  "description": "Replicate yourself. Personal coding preferences for Claude Code. Not project rules, YOUR rules.",
  "version": "1.0.10",
  "icon": "icon.png",
  "publisher": "gundurraga",
  "repository": {
    "type": "git",
    "url": "https://github.com/gundurraga/specyou"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "claude-code",
    "ai-assistant",
    "personalization",
    "coding-preferences",
    "hooks",
    "prompts",
    "customization",
    "ai",
    "claude"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "specyou",
          "title": "SpecYou",
          "icon": "$(person)"
        }
      ]
    },
    "views": {
      "specyou": [
        {
          "id": "specyouSpecs",
          "name": "SpecYou",
          "canMoveViews": true
        }
      ]
    },
    "commands": [
      {
        "command": "specyou.addSpec",
        "title": "Add Spec",
        "icon": "$(add)"
      },
      {
        "command": "specyou.addFolder",
        "title": "Add Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "specyou.copySpec",
        "title": "Copy Spec",
        "icon": "$(copy)"
      },
      {
        "command": "specyou.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "specyou.renameItem",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "specyou.search",
        "title": "Search Specs",
        "icon": "$(search)"
      },
      {
        "command": "specyou.updateSpecyou",
        "title": "SpecYou: Update SPECYOU.md"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "specyou.search",
          "when": "view == specyouSpecs",
          "group": "navigation@1"
        },
        {
          "command": "specyou.addSpec",
          "when": "view == specyouSpecs",
          "group": "navigation@2"
        },
        {
          "command": "specyou.addFolder",
          "when": "view == specyouSpecs",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "specyou.addSpec",
          "when": "view == specyouSpecs && viewItem == folder"
        },
        {
          "command": "specyou.addFolder",
          "when": "view == specyouSpecs && viewItem == folder"
        },
        {
          "command": "specyou.copySpec",
          "when": "view == specyouSpecs && viewItem == spec",
          "group": "inline"
        },
        {
          "command": "specyou.renameItem",
          "when": "view == specyouSpecs"
        },
        {
          "command": "specyou.deleteItem",
          "when": "view == specyouSpecs"
        }
      ]
    }
  }
}
